{
  "name": "open-mmo",
  "version": "0.1.0",
  "private": true,
  "description": "An open source MMO RPG game",
  "main": "build/index.js",
  "scripts": {
    "build:server": "tsc -p src/server/tsconfig.json && tsc-alias -p src/server/tsconfig.json",
    "build:client": "vite build",
    "build": "npm run build:server && npm run build:client",
    "dev:server": "tsx watch src/server/index.js",
    "dev:client": "vite build --watch",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "start": "node build/server/index.js"
  },
  "author": "limitedleaf",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@types/node": "^24.5.0",
    "@typescript-eslint/eslint-plugin": "8.44.0",
    "@typescript-eslint/parser": "8.44.0",
    "concurrently": "9.2.1",
    "eslint": "9.35.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.5.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.3.0",
    "vite": "7.1.5"
  }
}
