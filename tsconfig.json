{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@core/*": [
                "src/core/*"
            ]
        }
    },
    "files": [],
    "references": [
        {
            "path": "./src/client"
        },
        {
            "path": "./src/server"
        }
    ]
}